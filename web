    <script>
        let appData = {
            users: {},
            posts: [],
            chats: [],
            currentUser: null,
            currentChat: null,
            currentMedia: null
        };

        function loadData() {
            const saved = localStorage.getItem('connectAppData');
            if (saved) {
                appData = JSON.parse(saved);
            }
        }

        function saveData() {
            localStorage.setItem('connectAppData', JSON.stringify(appData));
        }

        loadData();

        function showSignup() {
            document.getElementById('loginForm').classList.add('hidden');
            document.getElementById('signupForm').classList.remove('hidden');
        }

        function showLogin() {
            document.getElementById('signupForm').classList.add('hidden');
            document.getElementById('loginForm').classList.remove('hidden');
        }

        function signup() {
            const name = document.getElementById('signupName').value.trim();
            const pass = document.getElementById('signupPass').value;
            const bday = document.getElementById('signupBday').value;
            const gender = document.querySelector('input[name="gender"]:checked').value;

            if (!name || !pass || !bday) {
                alert('Please fill in all fields');
                return;
            }

            if (appData.users[name.toLowerCase()]) {
                alert('Username already exists');
                return;
            }

            appData.users[name.toLowerCase()] = {
                name: name,
                password: pass,
                birthday: bday,
                gender: gender,
                avatar: 'data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100"><circle cx="50" cy="50" r="50" fill="%231877f2"/><text x="50" y="50" text-anchor="middle" dy=".3em" fill="white" font-size="40" font-family="Arial">' + name[0].toUpperCase() + '</text></svg>',
                friends: []
            };

            saveData();
            alert('Account created! You can now log in.');
            showLogin();
        }

        function login() {
            const name = document.getElementById('loginName').value.trim();
            const pass = document.getElementById('loginPass').value;

            const user = appData.users[name.toLowerCase()];
            if (user && user.password === pass) {
                appData.currentUser = name.toLowerCase();
                saveData();
                showApp();
            } else {
                alert('Invalid username or password');
            }
        }

        function logout() {
            appData.currentUser = null;
            document.getElementById('authPage').style.display = 'flex';
            document.getElementById('appPage').style.display = 'none';
        }

        function showApp() {
            const user = appData.users[appData.currentUser];
            document.getElementById('authPage').style.display = 'none';
            document.getElementById('appPage').style.display = 'block';
            document.getElementById('navAvatar').src = user.avatar;
            showPage('feed');
        }

        function showPage(page) {
            document.querySelectorAll('.nav-btn').forEach(btn => btn.classList.remove('active'));
            document.getElementById('feedPage').classList.add('hidden');
            document.getElementById('friendsPage').classList.add('hidden');
            document.getElementById('messagesPage').classList.add('hidden');
            document.getElementById('profilePage').classList.add('hidden');

            if (page === 'feed') {
                document.getElementById('feedPage').classList.remove('hidden');
                document.querySelector('.nav-btn').classList.add('active');
                displayFeed();
            } else if (page === 'friends') {
                document.getElementById('friendsPage').classList.remove('hidden');
                document.querySelectorAll('.nav-btn')[1].classList.add('active');
                displayFriends();
            } else if (page === 'messages') {
                document.getElementById('messagesPage').classList.remove('hidden');
                document.querySelectorAll('.nav-btn')[2].classList.add('active');
                displayChats();
            } else if (page === 'profile') {
                document.getElementById('profilePage').classList.remove('hidden');
                displayProfile();
            }
        }

        function previewMedia(input, type) {
            const file = input.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    appData.currentMedia = { type: type, data: e.target.result };
                    const preview = document.getElementById('mediaPreview');
                    if (type === 'image') {
                        preview.innerHTML = `<img src="${e.target.result}" style="max-width:100%; border-radius:8px;">`;
                    } else {
                        preview.innerHTML = `<video src="${e.target.result}" controls style="max-width:100%; border-radius:8px;"></video>`;
                    }
                };
                reader.readAsDataURL(file);
            }
        }

        function createPost() {
            const text = document.getElementById('postText').value.trim();
            if (!text && !appData.currentMedia) {
                alert('Please write something or add media');
                return;
            }

            const post = {
                id: Date.now(),
                author: appData.currentUser,
                text: text,
                media: appData.currentMedia,
                date: new Date().toLocaleString(),
                reactions: { like: [], love: [], haha: [] },
                comments: []
            };

            appData.posts.unshift(post);
            document.getElementById('postText').value = '';
            document.getElementById('mediaPreview').innerHTML = '';
            appData.currentMedia = null;
            saveData();
            displayFeed();
        }

        function reactToPost(postId, reaction) {
            const post = appData.posts.find(p => p.id === postId);
            if (!post) return;

            Object.keys(post.reactions).forEach(r => {
                post.reactions[r] = post.reactions[r].filter(u => u !== appData.currentUser);
            });

            if (!post.reactions[reaction].includes(appData.currentUser)) {
                post.reactions[reaction].push(appData.currentUser);
            }

            saveData();
            displayFeed();
        }

        function addComment(postId) {
            const input = document.getElementById(`comment-${postId}`);
            const text = input.value.trim();
            if (!text) return;

            const post = appData.posts.find(p => p.id === postId);
            if (!post) return;

            post.comments.push({
                author: appData.currentUser,
                text: text,
                date: new Date().toLocaleString()
            });

            input.value = '';
            saveData();
            displayFeed();
        }

        function displayFeed() {
            const feed = document.getElementById('feed');
            const user = appData.users[appData.currentUser];
            feed.innerHTML = '';

            appData.posts.forEach(post => {
                const author = appData.users[post.author];
                const postDiv = document.createElement('div');
                postDiv.className = 'post';

                let mediaHTML = '';
                if (post.media) {
                    if (post.media.type === 'image') {
                        mediaHTML = `<div class="post-media"><img src="${post.media.data}"></div>`;
                    } else {
                        mediaHTML = `<div class="post-media"><video src="${post.media.data}" controls></video></div>`;
                    }
                }

                const likeActive = post.reactions.like.includes(appData.currentUser) ? 'active' : '';
                const loveActive = post.reactions.love.includes(appData.currentUser) ? 'active' : '';
                const hahaActive = post.reactions.haha.includes(appData.currentUser) ? 'active' : '';

                let commentsHTML = post.comments.map(c => {
                    const commenter = appData.users[c.author];
                    return `
                        <div class="comment">
                            <img src="${commenter.avatar}" class="comment-avatar">
                            <div class="comment-content">
                                <div class="comment-author">${commenter.name}</div>
                                <div class="comment-text">${c.text}</div>
                            </div>
                        </div>
                    `;
                }).join('');

                postDiv.innerHTML = `
                    <div class="post-header">
                        <img src="${author.avatar}" class="post-avatar">
                        <div class="post-info">
                            <div class="post-author">${author.name}</div>
                            <div class="post-date">${post.date}</div>
                        </div>
                    </div>
                    <div class="post-content">${post.text}</div>
                    ${mediaHTML}
                    <div class="post-reactions">
                        <button class="reaction-btn ${likeActive}" onclick="reactToPost(${post.id}, 'like')">
                            üëç Like ${post.reactions.like.length > 0 ? post.reactions.like.length : ''}
                        </button>
                        <button class="reaction-btn ${loveActive}" onclick="reactToPost(${post.id}, 'love')">
                            ‚ù§Ô∏è Love ${post.reactions.love.length > 0 ? post.reactions.love.length : ''}
                        </button>
                        <button class="reaction-btn ${hahaActive}" onclick="reactToPost(${post.id}, 'haha')">
                            üòÇ Haha ${post.reactions.haha.length > 0 ? post.reactions.haha.length : ''}
                        </button>
                    </div>
                    <div class="comments">
                        ${commentsHTML}
                        <div class="comment-input">
                            <img src="${user.avatar}" class="comment-avatar">
                            <input type="text" id="comment-${post.id}" placeholder="Write a comment...">
                            <button onclick="addComment(${post.id})" style="width:auto; padding:8px 16px;">Post</button>
                        </div>
                    </div>
                `;

                feed.appendChild(postDiv);
            });
        }

        function displayFriends() {
            const user = appData.users[appData.currentUser];
            const friendsList = document.getElementById('friendsList');
            const usersList = document.getElementById('usersList');

            friendsList.innerHTML = '';
            usersList.innerHTML = '';

            user.friends.forEach(friendId => {
                const friend = appData.users[friendId];
                const div = document.createElement('div');
                div.className = 'friend-item';
                div.innerHTML = `
                    <img src="${friend.avatar}" class="friend-avatar">
                    <div class="friend-info">
                        <strong>${friend.name}</strong>
                    </div>
                    <div class="friend-actions">
                        <button onclick="startChat('${friendId}')">Message</button>
                    </div>
                `;
                friendsList.appendChild(div);
            });

            Object.keys(appData.users).forEach(userId => {
                if (userId !== appData.currentUser && !user.friends.includes(userId)) {
                    const otherUser = appData.users[userId];
                    const div = document.createElement('div');
                    div.className = 'friend-item';
                    div.innerHTML = `
                        <img src="${otherUser.avatar}" class="friend-avatar">
                        <div class="friend-info">
                            <strong>${otherUser.name}</strong>
                        </div>
                        <div class="friend-actions">
                            <button onclick="addFriend('${userId}')">Add Friend</button>
                        </div>
                    `;
                    usersList.appendChild(div);
                }
            });
        }

        function addFriend(friendId) {
            const user = appData.users[appData.currentUser];
            const friend = appData.users[friendId];
            
            if (!user.friends.includes(friendId)) {
                user.friends.push(friendId);
                friend.friends.push(appData.currentUser);
                saveData();
                alert(`You are now friends with ${friend.name}!`);
                displayFriends();
            }
        }

        function startChat(friendId) {
            const chatId = [appData.currentUser, friendId].sort().join('-');
            let chat = appData.chats.find(c => c.id === chatId);
            
            if (!chat) {
                const friend = appData.users[friendId];
                chat = {
                    id: chatId,
                    type: 'private',
                    members: [appData.currentUser, friendId],
                    name: friend.name,
                    messages: []
                };
                appData.chats.push(chat);
                saveData();
            }
            
            showPage('messages');
            openChat(chatId);
        }

        function displayChats() {
            const chatList = document.getElementById('chatList');
            chatList.innerHTML = '';

            appData.chats.forEach(chat => {
                const div = document.createElement('div');
                div.className = 'chat-item';
                if (appData.currentChat === chat.id) {
                    div.classList.add('active');
                }

                let chatName = chat.name;
                let avatar = '';
                
                if (chat.type === 'private') {
                    const otherId = chat.members.find(m => m !== appData.currentUser);
                    const other = appData.users[otherId];
                    chatName = other.name;
                    avatar = other.avatar;
                } else {
                    avatar = 'data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100"><circle cx="50" cy="50" r="50" fill="%2342b72a"/><text x="50" y="50" text-anchor="middle" dy=".3em" fill="white" font-size="40" font-family="Arial">üë•</text></svg>';
                }

                const unread = chat.messages.filter(m => m.author !== appData.currentUser && !m.read).length;
                const badge = unread > 0 ? `<span class="badge">${unread}</span>` : '';

                div.innerHTML = `
                    <img src="${avatar}" class="friend-avatar">
                    <div class="friend-info">
                        <strong>${chatName}</strong>${badge}
                    </div>
                `;
                div.onclick = () => openChat(chat.id);
                chatList.appendChild(div);
            });

            updateMessageBadge();
        }

        function updateMessageBadge() {
            let totalUnread = 0;
            appData.chats.forEach(chat => {
                totalUnread += chat.messages.filter(m => m.author !== appData.currentUser && !m.read).length;
            });
            
            const badge = document.getElementById('msgBadge');
            if (totalUnread > 0) {
                badge.innerHTML = `<span class="badge">${totalUnread}</span>`;
            } else {
                badge.innerHTML = '';
            }
        }

        function openChat(chatId) {
            appData.currentChat = chatId;
            const chat = appData.chats.find(c => c.id === chatId);
            
            chat.messages.forEach(m => {
                if (m.author !== appData.currentUser) {
                    m.read = true;
                }
            });
            saveData();

            const header = document.getElementById('chatHeader');
            const messages = document.getElementById('chatMessages');
            const inputArea = document.getElementById('chatInputArea');

            let chatName = chat.name;
            if (chat.type === 'private') {
                const otherId = chat.members.find(m => m !== appData.currentUser);
                const other = appData.users[otherId];
                chatName = other.name;
            }

            header.textContent = chatName;
            inputArea.style.display = 'flex';

            messages.innerHTML = '';
            chat.messages.forEach(msg => {
                const author = appData.users[msg.author];
                const div = document.createElement('div');
                div.className = 'message';
                if (msg.author === appData.currentUser) {
                    div.classList.add('own');
                }

                let mediaHTML = '';
                if (msg.media) {
                    if (msg.media.type === 'image') {
                        mediaHTML = `<img src="${msg.media.data}" class="message-media">`;
                    } else if (msg.media.type === 'video') {
                        mediaHTML = `<video src="${msg.media.data}" controls class="message-media"></video>`;
                    }
                }

                div.innerHTML = `
                    ${msg.author !== appData.currentUser ? `<small>${author.name}</small>` : ''}
                    <div class="message-bubble">${msg.text}</div>
                    ${mediaHTML}
                `;
                messages.appendChild(div);
            });

            messages.scrollTop = messages.scrollHeight;
            displayChats();
        }

        function sendMessage() {
            const input = document.getElementById('chatInput');
            const text = input.value.trim();
            const fileInput = document.getElementById('chatFileInput');
            
            if (!text && !fileInput.files[0]) return;

            const chat = appData.chats.find(c => c.id === appData.currentChat);
            if (!chat) return;

            if (fileInput.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const fileType = fileInput.files[0].type.startsWith('image') ? 'image' : 'video';
                    chat.messages.push({
                        author: appData.currentUser,
                        text: text || '',
                        media: { type: fileType, data: e.target.result },
                        date: new Date().toLocaleString(),
                        read: false
                    });
                    saveData();
                    input.value = '';
                    fileInput.value = '';
                    openChat(appData.currentChat);
                };
                reader.readAsDataURL(fileInput.files[0]);
            } else {
                chat.messages.push({
                    author: appData.currentUser,
                    text: text,
                    media: null,
                    date: new Date().toLocaleString(),
                    read: false
                });
                saveData();
                input.value = '';
                openChat(appData.currentChat);
            }
        }

        function handleChatFile(input) {
            // File is handled in sendMessage
        }

        function showCreateGroupChat() {
            const user = appData.users[appData.currentUser];
            if (user.friends.length < 2) {
                alert('You need at least 2 friends to create a group chat');
                return;
            }

            const checkList = document.getElementById('friendCheckList');
            checkList.innerHTML = '<p>Select friends to add:</p>';
            
            user.friends.forEach(friendId => {
                const friend = appData.users[friendId];
                const div = document.createElement('div');
                div.innerHTML = `
                    <label style="display:flex; align-items:center; padding:10px; cursor:pointer;">
                        <input type="checkbox" value="${friendId}" style="margin-right:10px; width:auto;">
                        <img src="${friend.avatar}" style="width:32px; height:32px; border-radius:50%; margin-right:10px;">
                        ${friend.name}
                    </label>
                `;
                checkList.appendChild(div);
            });

            document.getElementById('groupModal').style.display = 'flex';
        }

        function createGroupChat() {
            const groupName = document.getElementById('groupName').value.trim();
            const checkboxes = document.querySelectorAll('#friendCheckList input[type="checkbox"]:checked');
            
            if (!groupName) {
                alert('Please enter a group name');
                return;
            }

            if (checkboxes.length < 2) {
                alert('Please select at least 2 friends');
                return;
            }

            const members = [appData.currentUser];
            checkboxes.forEach(cb => members.push(cb.value));

            const chat = {
                id: 'group-' + Date.now(),
                type: 'group',
                members: members,
                name: groupName,
                messages: []
            };

            appData.chats.push(chat);
            saveData();
            closeModal('groupModal');
            showPage('messages');
            openChat(chat.id);
        }

        function displayProfile() {
            const user = appData.users[appData.currentUser];
            document.getElementById('profileAvatar').src = user.avatar;
            document.getElementById('profileName').textContent = user.name;
            document.getElementById('profileBday').textContent = user.birthday;
            document.getElementById('profileGender').textContent = user.gender;
            document.getElementById('profileFriends').textContent = user.friends.length;
        }

        function showEditProfile() {
            const user = appData.users[appData.currentUser];
            document.getElementById('editName').value = user.name;
            document.getElementById('editBday').value = user.birthday;
            document.getElementById('editGender').value = user.gender;
            document.getElementById('editModal').style.display = 'flex';
        }

        function previewAvatar(input) {
            const file = input.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('avatarPreview').src = e.target.result;
                    document.getElementById('avatarPreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        }

        function saveProfile() {
            const user = appData.users[appData.currentUser];
            const newName = document.getElementById('editName').value.trim();
            const avatarInput = document.getElementById('editAvatar');

            if (!newName) {
                alert('Name cannot be empty');
                return;
            }

            user.name = newName;
            user.birthday = document.getElementById('editBday').value;
            user.gender = document.getElementById('editGender').value;

            if (avatarInput.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    user.avatar = e.target.result;
                    saveData();
                    closeModal('editModal');
                    displayProfile();
                    document.getElementById('navAvatar').src = user.avatar;
                };
                reader.readAsDataURL(avatarInput.files[0]);
            } else {
                saveData();
                closeModal('editModal');
                displayProfile();
            }
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

        if (appData.currentUser) {
            showApp();
        }
    </script>
</body>
</html>
